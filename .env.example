# Slack Configuration
# Get webhook URL from: https://api.slack.com/apps → Your App → Incoming Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Encryption Key (32-byte hex string for AES-256-GCM)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# Upstash Redis Storage (get from https://console.upstash.com/)
# These values are automatically provided by Upstash in the REST API section
KV_REST_API_URL=your-upstash-rest-api-url
KV_REST_API_TOKEN=your-upstash-rest-api-token
KV_REST_API_READ_ONLY_TOKEN=your-upstash-read-only-token
KV_URL=your-upstash-redis-url

# NextAuth Configuration
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Email Server Configuration (for magic link authentication)
# Format: smtp://username:password@smtp.example.com:587
# Or use individual variables below
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
# Alternative: Individual email server variables
# EMAIL_SERVER_HOST=smtp.example.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@example.com
# EMAIL_SERVER_PASSWORD=your-email-password

# Email sender address
EMAIL_FROM=noreply@example.com

# Optional: Email whitelist (comma-separated, leave empty to allow all authenticated users)
# ALLOWED_EMAILS=user1@example.com,user2@example.com

# Optional: Digest lookback hours when no previous digest exists (default: 24)
# DIGEST_LOOKBACK_HOURS=24

# Optional: Node environment
# NODE_ENV=development

